<%= session[:user_id] %>
<h1>PGA World Rankings</h1>
<h2>Stats for the 2013 season</h2>

<table>
    <tr>
      <th>Player Name</th>
      <th>Points</th>
    </tr>

    <tr>
      <% @players.each do |player| %>
      <td><%= player.name %></td>
      <% player.points.each do |point| %>
      <td><%= point.amount %></td>
      <% end %>
      <td><%= player.tournament %></td>
      
      <td><%= button_to "delete", { action: "destroy", id: player.id},
      {method: :delete, data:{confirm: "Are you sure?"}}%></td>
      <td><%= button_to "edit", edit_player_path(player) %></td>
    </tr>


    <% end %>
</table>